<script>
var result='${msg}';
if(result=='SUCCESS') {
	alert("Successfully Updated.");
}

$(".pagination li a").on("click", function(event)){
	
	event.preventDefault();
	
	var targetPage = $(this).attr("hrdf");
	
	var jobForm=$("#jobForm");
	jobForm.find("[name='page']").val(targetPage);
	jobForm.attr("action", "/post/listPage").attr("method", "get");
	jobForm.submit();
});
</script>

